.btn
    display block
    background-color middle-green
    color white
    border none 
    border-bottom unit(size/3,'rem') solid darken(middle-green,50%)
    width 100%
    border-radius unit(size/3,'rem')
    cursor pointer
    box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
    transition all .3s
    outline: none

.btn:hover
    background-color darken(middle-green,10%)

.btn:active
    border-bottom unit(size/5,'rem') solid darken(middle-green,50%)